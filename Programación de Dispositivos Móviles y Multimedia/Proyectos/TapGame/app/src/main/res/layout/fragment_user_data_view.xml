<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.UserDataView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userdataview_lblUname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="UserName"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userdataview_lblScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="1234PTS"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/userdataview_lblMultiplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="x 1 . 0"
            android:textAllCaps="false"
            android:textColor="#FF5900"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/userdataview_lblClicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="+ 0 . 0"
            android:textAllCaps="false"
            android:textColor="#673AB7"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>